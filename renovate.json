{
  "enabled": true,
  "extends": [
    "config:base"
  ],
  "rangeStrategy": "update-lockfile",
  "unicodeEmoji": true,
  "separateMinorPatch": false,
  "separateMajorMinor": true,
  "prHourlyLimit": 15,
  "ruby-version":{"enabled": false},
  "ruby":{"enabled": true},
  "bundler":{"enabled": true},
  "docker": { "enabled": false },
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  },
  "major": {
    "enabled": false
  },
  "packageRules": [
    {
      "depTypeList": [
        "peerDependencies"
      ],
      "enabled": true,
      "rangeStrategy": "auto"
    },
    {
      "depTypeList": [
        "devDependencies"
      ],
      "enabled": true,
      "rangeStrategy": "pin"
    }
  ]
}
